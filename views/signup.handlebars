<div class="card">
  <div class="card-body">
    <form id="signup-form flex flex-col ...">
      <div class="form-group">
        <label for="username-signup">username:</label>
        <input
          type="text"
          class="form-control"
          id="username-signup"
          autofocus="true"
          aria-describedby="username"
        />
      </div>
      <div class="form-group">
        <label for="password-signup">password:</label>
        <input
          type="password"
          class="form-control"
          autofocus="true"
          id="password-signup"
        />
      </div>
      <div>
        <button type="submit" class="signupBtn">Sign Up!</button>
      </div>
      <div>
        <a href="/login" class="text-lime-600 hover:text-lime-700 focus:text-lime-600 text-underline">Already have an account? Login</a>
      </div>
    </form>
  </div>
</div>

<script src="/js/signup.js"></script>