<div class="flex flex-row place-content-center">
  <div class="basis-1/2">
    <form class="form signup-form mb-5 validate-me" id="signup-form validate-me" data-validate>
      <h1 class="text-xl">Sign up!</h1>
      <p> You are one step away from never forgetting a grocery item again!</p>
      <div class="form-group mb-5 error">
        {{! <label for="username-signup">username:</label> }}
        <input
          type="text"
          name="username"
          required
          id="username-signup"
          autofocus="true"
          aria-describedby="username"
          placeholder="ENTER A USERNAME"
          class="username-signup form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-black rounded-lg transition ease-in-out m-0 focus:border-black"
        />
      </div>
      <div class="form-group mb-5">
        {{! <label for="password-signup">password:</label> }}
        <input
          type="password"
          minlength="4"
          name="password"
          id="password-signup"
          autofocus="true"
          aria-describedby="password"
          placeholder="ENTER A PASSWORD"
          class="password-signup form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-black rounded-lg transition ease-in-out m-0 focus:border-black"
        />

<script src="/js/signup.js"></script>