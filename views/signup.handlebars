<div class="flex flex-row">
  <div class="basis-1/2">
    <form class= "form signup-form mb-5" id="signup-form">
      <h1 class="text-xl">Sign up!</h1>
      <div class="form-group mb-5">
        {{!-- <label for="username-signup">username:</label> --}}
        <input
          type="text"
          id="username-signup"
          autofocus="true"
          aria-describedby="username"
          placeholder="USERNAME" 
          class="form-control block w-full px-3 py-1.5
              text-base
              font-normal
              text-gray-700
              bg-white bg-clip-padding
              border border-solid border-black
              rounded-lg
              transition
              ease-in-out
              m-0
              focus:border-black"/>
      </div>
      <div class="form-group mb-5">
        {{!-- <label for="password-signup">password:</label> --}}
        <input
          type="text"
          id="password-signup"
          autofocus="true"
          aria-describedby="password"
          placeholder="PASSWORD" 
          class="form-control block w-full px-3 py-1.5
              text-base
              font-normal
              text-gray-700
              bg-white bg-clip-padding
              border border-solid border-black
              rounded-lg
              transition
              ease-in-out
              m-0
              focus:border-black"/>
          {{!-- type="password"
          class="form-control"
          autofocus="true"
