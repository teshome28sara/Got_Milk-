{{#if ingredients.length}}
  <div class="col-md-6 ingredient-list">
    <h3>Current Ingredient:</h3>

    {{#each ingredients as |ingredient|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4>{{ingredient.id}}">{{ingredient.name}}</h4>
      </div>
      <p>Quantity:{{ingredient_quantity}}</p>
      <p>spent:{{ingredient_cost}}</p>
      <p>purchased{{is_purchased}}</p>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{ingredient.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>
